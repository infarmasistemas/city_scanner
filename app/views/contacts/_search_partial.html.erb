<div class="card mt-3">
  <div class="card-body">
    <h4 class="header-title">Tools</h4>
    <%= form_tag(contacts_path, method: :get) do %>
      <div class="row">
        <div class="col-md-9">
          <div class="form-group">
            <label for="search" class="col-form-label">Search Term</label>
            <%= text_field_tag :search, params[:search], placeholder: 'Search Contacts', class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 mt-3 pt--20">
          <div class="form-group">
            <%= submit_tag 'Search', class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>