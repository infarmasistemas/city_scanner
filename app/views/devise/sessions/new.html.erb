<div class="login-area login-bg">
  <div class="container">
    <div class="login-box ptb--100">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-form-head">
          <%= image_tag 'logo.png', class: 'img-fluid mb-3' %>

          <h4>Acesso</h4>
          <p>Acesso Infarma</p>
        </div>

        <%= render 'devise/shared/alerts' %>

        <div class="login-form-body">
          <div class="form-gp">
            <label for="exampleInputEmail1">Endere√ßo de e-mail</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <i class="ti-email"></i>
          </div>

          <div class="form-gp">
            <label for="exampleInputPassword1">Senha</label>
            <%= f.password_field :password, autocomplete: "current-password" %>
            <i class="ti-lock"></i>
          </div>

          <div class="row mb-4 rmber-area">
            <div class="col-6">
              <div class="custom-control custom-checkbox mr-sm-2">
                <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me, class: "custom-control-input" %>
                <% end %>
                <label class="custom-control-label" for="customControlAutosizing">Lembrar de mim</label>
              </div>
            </div>
            <div class="col-6 text-right">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
              <% end %>
            </div>
          </div>
          <div class="submit-btn-area">
            <button id="form_submit" type="submit">Acessar <i class="ti-arrow-right"></i></button>
          </div>
          <div class="mt-3">
            <%#= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>